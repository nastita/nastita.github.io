<section
  id='home'
  class='h-screen flex items-center justify-center text-center px-6 bg-base-100'
>
  <div class='max-w-3xl mx-auto'>
    <div
      class='mb-8 opacity-0 translate-y-8 transition-all duration-600 ease-out'
    >
      <div class='w-40 h-40 mx-auto rounded-full overflow-hidden'>
        <img
          src='/images/ed.png'
          alt='Eduardo Sacco'
          class='w-full h-full object-cover'
        />
      </div>
    </div>
    <h1
      class='text-5xl md:text-6xl lg:text-8xl font-black uppercase mb-6 text-base-content opacity-0 translate-y-8 transition-all duration-600 ease-out tracking-tight leading-none'
      style="font-family: 'Monument Sans'; letter-spacing: -0.02em; -webkit-text-stroke: 1px currentColor;"
    >
      Eduardo<br />Sacco
    </h1>
    <p
      class='text-xl md:text-2xl text-base-content/70 mb-6 opacity-0 translate-y-8 transition-all duration-600 delay-100 ease-out'
    >
      Senior Software Engineer
    </p>
    <p
      class='text-lg mb-8 text-base-content/80 opacity-0 translate-y-8 transition-all duration-600 delay-200 ease-out'
    >
      I create robust and innovative software solutions<br />with a focus on web
      and blockchain technologies.
    </p>
    <div
      class='opacity-0 translate-y-8 transition-all duration-600 delay-300 ease-out'
    >
      <a href='#contact' class='btn btn-primary btn-lg'> Get in Touch </a>
    </div>
  </div>
  <div
    class='absolute bottom-10 left-1/2 -translate-x-1/2 text-2xl animate-bounce'
  >
    <i class='fas fa-chevron-down'></i>
  </div>
</section>

<style>
  h1 {
    text-shadow: 2px 2px 0px rgba(255, 255, 255, 0.1);
  }
</style>

<script>
  // Intersection Observer for animations
  const fadeElements = document.querySelectorAll('[class*="opacity-0"]');

  const fadeObserver = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.remove('opacity-0', 'translate-y-8');
        }
      });
    },
    {
      threshold: 0.1,
    }
  );

  fadeElements.forEach((element) => {
    fadeObserver.observe(element);
  });
</script>
